    </div>
    <table class="table table-bordered table-hover table-click">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Owner</th>
                <th>Last Modified</th>
                <th>Created</th>
                <th>Public</th>
        </thead>
        <tbody>
            <% Document.all.each do |doc| %>
                <%
                    color = 'error'
                    if doc.user==current_user
                        color = 'success'
                    elsif doc.public
                        color = 'info'
                    end
                %>
                <tr class="<%= color %>">
                    <td><%= doc.id %></td>
                    <td><%= doc.name %></td>
                    <td><%= doc.user.email %></td>
                    <td><%= doc.last_edit_time.strftime("%m/%d/%Y at %I:%M%p") %></td>
                    <td><%= doc.created.strftime("%m/%d/%Y at %I:%M%p")%></td>
                    <td><%= doc.public ? 'Yes' : 'No' %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <p>
        <i>Works with Chrome, Firefox, Opera, and other modern browsers.</i>
    </p>
</div>
