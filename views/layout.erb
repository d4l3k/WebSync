                    <a href="/admin" title="Admin Control Panel"><i class="fa fa-cog fa-lg"></i></a>
                </li>
            <% end %>
            <li>
                <%= render_login_button %>
            </li>
        </ul>
    </div>
  </div><!-- /.navbar-collapse -->
</nav>
